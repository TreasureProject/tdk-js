{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "types": ["node"]
  },
  "include": [
    "./apps/*/src/**/*.ts?",
    "./apps/*/src/**/*.d.ts",
    "./packages/*/src/**/*.ts?",
    "./packages/*/src/**/*.d.ts",
    "./apps/api/prisma/seed.ts"
  ]
}
