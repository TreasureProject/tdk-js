{
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:core": "npm run build --prefix ./packages/core",
    "build:api": "npm run build:core && npm run build --prefix ./packages/api",
    "build:react": "npm run build:core && npm run build --prefix ./packages/react",
    "build:login": "npm run build:react && npm run build --prefix ./packages/login",
    "build:examples:login": "npm run build:react && npm run build --prefix ./examples/login",
    "build:examples:payments": "npm run build:react && npm run build --prefix ./examples/payments",
    "dev": "concurrently \"npm run dev:core\" \"npm run dev:api\" \"npm run dev:react\"",
    "dev:core": "npm run dev --prefix ./packages/core",
    "dev:api": "npm run dev --prefix ./packages/api",
    "dev:login": "npm run dev --prefix ./packages/login",
    "dev:react": "npm run dev --prefix ./packages/react",
    "dev:examples:harvester": "npm run dev --prefix ./examples/harvester",
    "dev:examples:payments": "npm run dev --prefix ./examples/payments",
    "typecheck": "tsc --noEmit",
    "format": "eslint --fix . && prettier --write --ignore-unknown .",
    "lint": "eslint .",
    "test": "vitest",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@tanstack/eslint-plugin-query": "^5.0.0",
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@types/node": "^20.8.2",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "concurrently": "^8.2.1",
    "esbuild-register": "^3.5.0",
    "eslint": "^8.50.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.3",
    "prettier-plugin-prisma": "^5.0.0",
    "prettier-plugin-tailwindcss": "^0.5.5",
    "tsup": "^8.0.1",
    "typescript": "^5.2.2",
    "vitest": "^1.0.1"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ]
}
